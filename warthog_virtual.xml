        <action name="v_shield_raise_level_left">
            <rebind device="joystick" input="js3_hat1_left" /><!-- Coolie Hat Left -->
        </action>
        <action name="v_shield_raise_level_right">
            <rebind device="joystick" input="js3_hat1_right" /><!-- Coolie Hat Right -->
        </action>
        <action name="v_shield_raise_level_up">
            <rebind device="joystick" input="" />
        </action>
        <action name="v_shield_raise_level_down">
            <rebind device="joystick" input="" />
        </action>
        <!--  -->
        <action name="v_shield_reset_level">
            <rebind device="joystick" input="js3_button12" /><!-- China Hat Aft -->
        </action>
        <action name="v_shield_boost_recharge">
            <rebind device="joystick" input="js3_button11" /><!-- China Hat Fwd -->
        </action>
    </actionmap>
    <actionmap name="spaceship_radar">
        <!-- <action name="v_radar_toggle_onoff">
            <rebind device="joystick" input="js3_button19" /><!- CMS Push (Long) ->
        </action> -->
