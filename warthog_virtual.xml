        </action>
        <action name="v_strafe_lateral">
            <rebind device="joystick" input="js3_rotx" /><!- Slew X ->
        </action>
        -->
        <!--  -->
        <action name="v_ifcs_toggle_vector_decoupling">
            <rebind device="joystick" input="js3_button21" /><!-- Slew Push -->
        </action>
        <action name="v_ifcs_toggle_safety">
            <rebind device="joystick" input="js3_button5" /><!-- MMCB -->
        </action>
    </actionmap>
    <actionmap name="spaceship_targeting">
        <action name="v_target_cycle_all_fwd">
            <rebind device="joystick" input="js3_button8" /><!-- TMS Right -->
        </action>
        <action name="v_target_cycle_all_back">
            <rebind device="joystick" input="js3_button10" /><!-- TMS Left -->
        </action>
        <action name="v_target_missile_lock_focused">
            <rebind device="joystick" input="js3_button2" /><!-- Weapon Release -->
        </action>
        <action name="v_target_cycle_hostile_fwd">
            <rebind device="joystick" input="js3_button9" /><!-- TMS Down (Short) -->
        </action>
        <action name="v_target_nearest_hostile">
            <rebind device="joystick" input="js3_button7" /><!-- TMS Up (Short) -->
        </action>
        <!-- <action name="v_target_toggle_pinned_focused">
            <rebind device="joystick" input="js3_button7" /><!- TMS Up (Long) ->
        </action> -->
