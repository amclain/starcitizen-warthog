        <action name="v_strafe_right">
            <rebind device="joystick" input="js3_hat1_right" />
        </action>
        <action name="v_strafe_up">
            <rebind device="joystick" input="js3_hat1_up" />
        </action>
        <action name="v_strafe_down">
            <rebind device="joystick" input="js3_hat1_down" />
